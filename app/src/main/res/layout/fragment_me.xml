<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="我的"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <com.lfq.mobileoffice.ui.home.me.IconButton
                android:id="@+id/me_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bt_icon="@drawable/ic_baseline_info_24"
                app:bt_text="我的信息" />

            <com.lfq.mobileoffice.ui.home.me.IconButton
                android:id="@+id/ask_for_leave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bt_icon="@drawable/ic_baseline_rowing_24"
                app:bt_text="请假" />

            <com.lfq.mobileoffice.ui.home.me.IconButton
                android:id="@+id/business_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bt_icon="@drawable/ic_baseline_rowing_24"
                app:bt_text="出差" />

            <com.lfq.mobileoffice.ui.home.me.IconButton
                android:id="@+id/reimbursement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bt_icon="@drawable/ic_baseline_rowing_24"
                app:bt_text="报销" />

            <com.lfq.mobileoffice.ui.home.me.IconButton
                android:id="@+id/go_to_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bt_icon="@drawable/ic_baseline_rowing_24"
                app:bt_text="上班签到" />

            <com.lfq.mobileoffice.ui.home.me.IconButton
                android:id="@+id/off_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bt_icon="@drawable/ic_baseline_rowing_24"
                app:bt_text="下班签到" />

            <com.lfq.mobileoffice.ui.home.me.IconButton
                android:id="@+id/attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bt_icon="@drawable/ic_baseline_rowing_24"
                app:bt_text="我的考勤" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dddddd" />

            <com.lfq.mobileoffice.ui.home.me.IconButton
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bt_icon="@drawable/ic_baseline_settings_24"
                app:bt_text="设置" />

        </LinearLayout>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>